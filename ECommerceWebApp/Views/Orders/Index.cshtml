@model IEnumerable<ECommerceWebApp.Models.Domain.Order>

@{
    ViewData["Title"] = "Index";
}

<!--========== ALERT STARTS ==========-->
<div id="shopify-section-1550734361962" class="shopify-section">
    <div data-section-id="1550734361962" data-section-type="slide-v1" style=" ">
        <div class="container slider-home-classic">
            @if (TempData["successmsg"] != null)
            {
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>Well done!</strong> @TempData["successmsg"]
                </div>
            }
            @if (TempData["errormsg"] != null)
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>Oh snap!</strong> @TempData["errormsg"]
                </div>
            }
        </div>
    </div>
</div>
<!--========== ALERT ENDS ==========-->

<div id="shopify-section-cart-template" class="shopify-section">
    <div class="page-width" data-section-id="cart-template" data-section-type="cart-template">
        <div class="container container-240">
            <div class="checkout">
                <form action="/cart" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="shopping-cart bd-7">
                                <div class="cmt-title text-center abs">
                                    <h3 class="page-title v2">Orders</h3>
                                </div>
                                <div class="table-responsive">
                                    <table class="table cart-table">
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr class="item_cart">
                                                    <td class="product-name flex align-center" data-title="Product">
                                                        <a asp-action="Index" asp-controller="OrderItems" asp-route-id="@item.Id" class="d-none d-md-block btn-del">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                                                                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                                                            </svg>
                                                        </a>
                                                        <div class="product-info"> <a>@item.Date</a> </div>
                                                    </td>
                                                    <td class="bcart-quantity single-product-detail">
                                                        #@item.Id
                                                    </td>
                                                    <td class="bcart-quantity single-product-detail">
                                                        @item.Payment.Provider
                                                    </td>
                                                    <td class="total-price" data-title="Price">
                                                        <p class="price"><span class=money>$@item.Total.00</span></p>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
